@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
   <div> <a href="@Url.Action("YeniKategori","Kategori")" class="btn btn-primary">YENİ KATEGORİ EKLE</a></div>
   <br />
<table id="tbl1" class='table table-bordered'>
    <thead>
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    <tbody>

        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <th>@ktgr.KATEGORIADI</th>
                <th>@Html.ActionLink("SIL", "SIL", new { id = ktgr.KATEGORIID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz?')" })</th>
                <th><a href="@Url.Action("KategoriGetir","Kategori",new {id=ktgr.KATEGORIID})" class=" btn btn-success">GÜNCELLE</a></th>

            </tr>
        }
    </tbody>
</table>


<script type="text/javascript" src="https://cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.10.18/b-1.5.6/b-html5-1.5.6/fh-3.1.4/datatables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json'
        }

    });
</script>